doctype html 
html 
  block config
    include ../config/config
  head 
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=no")
    block head
      title= page_title + " | " + page
      each link in css
        link(rel="stylesheet" href="css/"+link)
  body 
    block header 
      include ../blocks/header
    block banner 
      img.banner__img(src="/res/banners/" + pagina_actual+".jpg" alt="Banner")
    block nosotros
    block destinos_elegidos
    block paquetes
    block contacto
    block opcion
    block clientes 
    block footer
      include ../blocks/footer
  